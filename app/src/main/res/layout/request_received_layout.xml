<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/cardViewFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:paddingBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImageRequest"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_margin="7dp"
            android:layout_gravity="left"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/txtFullNameRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="18dp"
            android:textSize="16dp"
            android:hint="FullName"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/txtLastSeenRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="43dp"
            android:hint="Last seen" />

        <Button
            android:id="@+id/btnCancelRequest"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            android:textSize="11dp"
            android:layout_gravity="bottom|center"
            android:padding="2dp"
            android:layout_marginBottom="3dp"
            android:text="Cancel Request"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:textColor="@color/colorAccent"
             />
        <Button
            android:id="@+id/btnAcceptRequest"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="bottom|right"
            android:textSize="11dp"
            android:padding="2dp"
            android:elevation="5dp"
            android:text="Accept Request"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="3dp"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>